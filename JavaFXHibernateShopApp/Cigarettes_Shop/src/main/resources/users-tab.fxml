<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane  minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller = "com.matuesz.shop.UsersTabController">
    <children>

        <!--TEXT AREAS-->
        <TextArea fx:id="outputConsole" editable="false" layoutX="400.0" layoutY="29.0" prefHeight="570.0" prefWidth="380" wrapText="true" AnchorPane.bottomAnchor="68.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="29.0">
            <font>
                <Font name="Cantarell Regular" size="15.0" />
            </font>
        </TextArea>

        <Label layoutX="400.0" layoutY="6.0" prefHeight="16.0" prefWidth="128.0" text="Output console:" AnchorPane.bottomAnchor="645.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="272.0" AnchorPane.topAnchor="6.0" />

        <!--BUTTONS-->
        <Button fx:id="clearButton" layoutX="400.0" layoutY="610.0" mnemonicParsing="false" prefHeight="47" prefWidth="100" onAction="#clearConsole" text="Clear" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="610.0" />
        <Button fx:id="getAllButton" layoutX="14.0" layoutY="189.0" mnemonicParsing="false"  prefHeight="47" prefWidth="355.0" onAction="#getAllUsers" text="GET ALL USERS" textAlignment="CENTER">
            <font>
                <Font size="19.0" />
            </font>
        </Button>

        <!--SEPARATORS-->
        <Separator layoutX="371.0" layoutY="7.0" orientation="VERTICAL" prefHeight="650.0" prefWidth="29.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="371.0" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="7.0" />
        <Separator layoutX="8.0" layoutY="31.0" prefHeight="0.0" prefWidth="373.0" />

        <!--LABELS-->
        <Label layoutX="14.0" layoutY="36.0" text="Sort by:" />
        <Label layoutX="200" layoutY="36.0" text="Sorting type:" />
        <Label layoutX="158.0" layoutY="6.0" text="Getting all" />

        <!--RADIO BUTTONS-->
        <RadioButton layoutX="14.0" layoutY="55.0" mnemonicParsing="false" selected="true" text="ID" onAction="#setSortingById">
            <toggleGroup>
                <ToggleGroup fx:id="sort"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton layoutX="14.0" layoutY="79.0" mnemonicParsing="false" text="NICK" toggleGroup="$sort" onAction="#setSortingByNick"/>
        <RadioButton layoutX="14.0" layoutY="103.0" mnemonicParsing="false" text="TIME JOINED" toggleGroup="$sort" onAction="#setSortingByTime"/>

        <RadioButton layoutX="200.0" layoutY="55.0" mnemonicParsing="false" selected="true" text="Ascending" onAction="#setSortingTypeAscending">
            <toggleGroup>
                <ToggleGroup fx:id="sortType"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton layoutX="200.0" layoutY="79.0" mnemonicParsing="false" text="Descending" toggleGroup="$sortType" onAction="#setSortingTypeDescending"/>

        <!--CHECKBOXES-->
        <CheckBox layoutX="14.0" layoutY="160.0" mnemonicParsing="false" text="Only users with extended info" onAction="#revertOnlyWithExtended"/>


    </children>
</AnchorPane>